@{
    ViewData["Title"] = "Login";
}
<h1 class="display-4">Log in using an existing account</h1>

<form>
    <input id="username" name="username"/>
    <br>
    <input id="password" type="password" name="password"/>
    <br>
    <input id="nume" name="nume"/>
    <br>
    <input id="prenume" name="prenume"/>
    <br>
    <input id="eMail" name="eMail"/>
    <br>
    <button id="register-btn">Register!</button>
</form>

<script>
    var btn = document.querySelector("#register-btn");
    btn.addEventListener("click", async e => {
        e.preventDefault();
        var uname = document.querySelector("#username").value;
        var pass = document.querySelector("#password").value;
        var name = document.querySelector("#nume").value;
        var fname = document.querySelector("#prenume").value;
        var eMail = document.querySelector("#eMail").value;
        console.log(`${uname} cu parola ${pass}`)

        var res = await fetch('/Register/RegisterUser', {
            method: "POST",
            headers: { 'Accept': 'application/json', 'Content-Type': 'application/json' },
            body: JSON.stringify({
                username: uname,
                password: pass,
                nume: name,
                prenume: fname,
                eMail: eMail
            })
        });

        var obj = await res.json();

        console.log(obj);
    })
</script>
<p> Don't have an account? <a href="/Register"> Create one instead</a> </p>

